<odoo>

    <record  id="role_grocery_store" model="res.users.role">
        <field name="name">ROLE PRINCIPAL - GRAP Activité</field>
        <field name="implied_ids" eval="[
            (4, ref('base.group_user')),
            (4, ref('uom.group_uom')),
            (4, ref('purchase.group_purchase_user')),
            (4, ref('sales_team.group_sale_salesman_all_leads')),
            (4, ref('stock.group_stock_user')),
            (4, ref('account.group_account_invoice')),

            (4, ref('sql_request_abstract.group_sql_request_user')),

            (4, ref('grap_change_access.group_buying_reselling')),
            (4, ref('product_print_category.user')),
        ]"/>
    </record>

    <record id="role_manage_pricelist" model="res.users.role">
        <field name="name">ROLE - Gère leur liste de prix</field>
        <field name="implied_ids" eval="[
            (4, ref('grap_change_access.group_pricelist_manager')),
        ]"/>
    </record>

    <record id="role_use_point_of_sale" model="res.users.role">
        <field name="name">ROLE - a un point de vente</field>
        <field name="implied_ids" eval="[
            (4, ref('point_of_sale.group_pos_user')),
        ]"/>
    </record>

    <record id="role_use_mobile_point_of_sale" model="res.users.role">
        <field name="name">ROLE - a un point de vente itinérant</field>
        <field name="implied_ids" eval="[
            (4, ref('point_of_sale.group_pos_user')),
            (4, ref('pos_place.group_pos_place_manager')),
        ]"/>
    </record>

    <record id="role_has_bizerba_scale" model="res.users.role">
        <field name="name">ROLE - A des balances Bizerba</field>
        <field name="implied_ids" eval="[
            (4, ref('product_to_scale_bizerba.group_user')),
        ]"/>
    </record>

    <!-- TODO : add sale_eshop groups, when it will be available -->
    <record id="role_has_eshop" model="res.users.role">
        <field name="name">ROLE - A une boutique en ligne</field>
        <field name="implied_ids" eval="[
            (4, ref('sale_recovery_moment.recovery_manager')),
            (4, ref('stock_preparation_category.preparation_manager')),
        ]"/>
    </record>

    <record id="role_is_integrated_activity" model="res.users.role">
        <field name="name">ROLE - Est une activitée intégrée</field>
        <field name="implied_ids" eval="[
            (4, ref('intercompany_trade_base.intercompany_trade_user')),
        ]"/>
    </record>

</odoo>
