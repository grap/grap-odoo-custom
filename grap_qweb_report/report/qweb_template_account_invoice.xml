<openerp><data>

    <template id="grap_template_account_invoice_document">
        <t t-call="grap_qweb_report.grap_layout">
            <div class="page">
                <div class="row">
                     <div class="col-xs-5 col-xs-offset-7">
                        <b>Client·e facturé·e :</b>
                        <address t-field="o.partner_id"
                            t-field-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}' />
                        <span t-if="o.partner_id.vat">TIN: <span t-field="o.partner_id.vat"/></span>
                    </div>
                </div>

                <h2><b>
                    <span t-if="o.type == 'out_invoice' and (o.state == 'open' or o.state == 'paid')">Facture</span>
                    <span t-if="o.type == 'out_invoice' and o.state == 'proforma2'">PRO-FORMA</span>
                    <span t-if="o.type == 'out_invoice' and o.state == 'draft'">Facture Brouillon</span>
                    <span t-if="o.type == 'out_invoice' and o.state == 'cancel'">Facture annulée</span>
                    <span t-if="o.type == 'out_refund'">Avoir Client</span>
                    <span t-if="o.type == 'in_refund'">Avoir Fournisseur</span>
                    <span t-if="o.type == 'in_invoice'">Facture Fournisseur</span>
                    <span t-field="o.number"/>
                </b></h2>

                <div class="row">
                    <div class="col-xs-10">
                        <table class="table table-condensed">
                            <thead>
                                <tr>
                                    <th t-if="o.origin">Origine</th>
                                    <th t-if="o.reference">Référence</th>
                                    <th t-if="o.date_invoice">Date de facture</th>
                                    <th t-if="o.date_due">Date d'échéance</th>
                                </tr>
                            </thead>
                            <tbody class="invoice_tbody">
                                <tr>
                                    <td t-if="o.origin">
                                        <span t-esc="o.origin.replace('OUT/', '')"/>
                                    </td>
                                    <td t-if="o.reference">
                                        <span t-field="o.reference"/>
                                    </td>
                                    <td t-if="o.date_invoice" class="col-xs-3">
                                        <span t-field="o.date_invoice"/>
                                    </td>
                                    <td t-if="o.date_due" class="col-xs-3">
                                        <span t-field="o.date_due"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="row">
                    <div class="col-xs-12">
                        <table class="table table-condensed">
                            <thead>
                                <tr>
                                    <th>Description</th>
                                    <th>Labels</th>
                                    <th>Quantité</th>
                                    <th class="text-right">P.U.</th>
                                    <th t-if="o.has_discount" class="text-right col-xs-1" groups="sale.group_discount_per_so_line">Rem. (%)</th>
                                    <th class="text-right">Taxes</th>
                                    <th class="text-right">Montant</th>
                                </tr>
                            </thead>
                            <tbody class="invoice_tbody">
                                <!-- On affiche les frais de port au dessus du total, pas ici -->
                                <tr t-foreach="o.invoice_line" t-as="l">
                                    <span t-if="not l.product_id.invoice_extra_cost">
                                        <td><span t-field="l.name"/>
                                            <span t-if="l.product_id and l.product_id.report_extra_food_info">
                                                <br/><span style="font-style: italic; font-size: 10px;" t-field="l.product_id.report_extra_food_info"/>
                                            </span>
                                        </td>
                                        <td>
                                            <span t-if="l.product_id"><span t-field="l.product_id.report_label_ids_info"/></span>
                                        </td>
                                        <td>
                                            <span t-field="l.quantity"/>
                                            <span t-field="l.uos_id" groups="product.group_uom"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-esc="'{:.3f}'.format(l.price_unit_vat_excluded).replace('.', ',')"/>
                                        </td>
                                        <td t-if="o.has_discount" class="text-right" groups="sale.group_discount_per_so_line">
                                            <span t-esc="'{:.2f}'.format(l.discount).replace('.', ',')"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-esc="', '.join(map(lambda x: x.report_short_code, l.invoice_line_tax_id))"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="l.price_subtotal" 
                                                t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                                        </td>
                                    </span>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

                <br/>
                <div class="row">
                    <div class="col-xs-5 pull-right">
                        <table class="table table-condensed">
                            <!-- FRAIS DE PORT -->
                            <tr t-foreach="o.invoice_line" t-as="l">
                                <span t-if="l.product_id.invoice_extra_cost">
                                    <td>
                                        <span t-field="l.name"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="l.price_subtotal" t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                                    </td>
                                </span>
                            </tr>
                            <!-- TOTAL-->
                            <tr class="border-black">
                                <td><strong>Total HT</strong></td>
                                <td class="text-right">
                                    <span t-field="o.amount_untaxed" t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                                </td>
                            </tr>
                            <tr>
                                <td>Taxes</td>
                                <td class="text-right">
                                    <span t-field="o.amount_tax" t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                                </td>
                            </tr>
                            <tr class="border-black">
                                <td><strong>Total TTC</strong></td>
                                <td class="text-right">
                                     <span t-field="o.amount_total" t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>

                <br/>
                <div class="row" t-if="o.tax_line">
                    <div class="col-xs-7">
                        <table class="table table-condensed">
                            <thead>
                                <tr>
                                    <th>Taxe</th>
                                    <th class="text-right">Base de calcul</th>
                                    <th class="text-right">Montant</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="o.tax_line" t-as="t">
                                    <td><span t-field="t.name"/></td>
                                    <td class="text-right">
                                        <span t-field="t.base"
                                            t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="t.amount"
                                            t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

                <p t-if="o.comment">
                    <strong>Commentaire</strong>
                    <span t-field="o.comment"/>
                </p>
                <p t-if="o.payment_term.note">
                    <strong>Condition de paiement</strong>
                    <span t-field="o.payment_term.note"/>
                </p>
            </div>
        </t>
    </template>

    <template id="grap_template_account_invoice">
        <t t-call="report.html_container">
            <t t-foreach="doc_ids" t-as="doc_id">
                <t t-raw="translate_doc(doc_id, doc_model, 'partner_id.lang', 'grap_qweb_report.grap_template_account_invoice_document')"/>
            </t>
        </t>
    </template>

    <!-- We replace account.report_invoice because it is called instead of the name of the report -->
    <template id="account.report_invoice">
        <t t-call="report.html_container">
            <t t-foreach="doc_ids" t-as="doc_id">
                <t t-raw="translate_doc(doc_id, doc_model, 'partner_id.lang', 'grap_qweb_report.grap_template_account_invoice_document')"/>
            </t>
        </t>
    </template>

</data></openerp>
