<odoo>

    <record id="view_bom_print_purchase_list_wizard_form" model="ir.ui.view">
        <field name="model">bom.print.purchase.list.wizard</field>
        <field name="arch" type="xml">
            <form string="Print Purchase list">
                <div class="wizard_options">
                  <h5>üîß Choose options</h5><br/>
                  <label for="option_group_by_product_category"/><field name="option_group_by_product_category" widget="boolean_toggle"/><br/>
                  TODO : option co√ªt par produit
                </div>
                <div class="wizard_instrutions">
                  <h5>üñ®Ô∏è Choose the quantity of each BoMs ‚Üì</h5>
                </div>
                <group colspan="2">
                    <group col="4" colspan="2">
                        <field name="line_ids" nolabel="1">
                            <tree editable="bottom">
                                <field name="bom_id" required="1"/>
                                <field name="bom_product_qty" readonly="1"/>
                                <field name="bom_uom_id" readonly="1"/>
                                <field name="bom_qty" required="1" widget="numeric_step"/>
                                <field name="bom_uom_id" readonly="1"/>
                            </tree>
                        </field>
                    </group>
                    <footer>
                        <button name="print_report" string="Print" type="object" icon="fa-print" class="oe_highlight"/>
                        <button icon="fa-ban" special="cancel" string="Cancel"/>
                    </footer>
                </group>
            </form>
        </field>
    </record>

    <record id="action_mrp_bom_purchase_list_print_wizard" model="ir.actions.act_window">
        <field name="name">Generate Purchase list</field>
        <field name="res_model">bom.print.purchase.list.wizard</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
