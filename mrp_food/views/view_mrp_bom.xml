<odoo>

    <!-- ************************************************************ -->
    <!-- MRP Bill of Materials - Form -->
    <!-- ************************************************************ -->

    <record id="view_mrp_bom_form" model="ir.ui.view">
        <field name="model">mrp.bom</field>
        <field name="inherit_id" ref="mrp.mrp_bom_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//group[1]" position="before">
                <field name="image" widget="image" class="oe_avatar"/>
                <div class="oe_title">
                    <label for="product_id" string="Bill of Materials"/>
                    <h1><field name="product_id" readonly="1"/></h1>
                </div>
                <p class="alert alert-warning" role="alert" attrs="{'invisible': ['|', ('is_bom_seasonal', '=', True), '&amp;', ('is_bom_seasonal', '=', False), ('are_bom_lines_seasonals', '=', False)]}">
                  ‚ö†Ô∏è This Bill Of Materials is not in season.
                </p>
                <p class="alert alert-warning" role="alert" attrs="{'invisible': ['|', ('are_bom_lines_seasonals', '=', True), '&amp;', ('is_bom_seasonal', '=', False), ('are_bom_lines_seasonals', '=', False)]}">
                  ‚ö†Ô∏è Some composants are not in season:
                  <b><field name="products_not_in_season" readonly="1"/></b>
                </p>
                <p class="alert alert-warning" role="alert" attrs="{'invisible': ['|', ('is_bom_seasonal', '=', True), ('are_bom_lines_seasonals', '=', True)]}">
                  ‚ö†Ô∏è This Bill Of Materials is not in season, and neither are these components:
                  <b><field name="products_not_in_season" readonly="1"/></b>
                </p>
            </xpath>
            <xpath expr="//field[@name='routing_id']" position="before">
                <field name="currency_id" invisible="1"/>
                <field name="standard_price_total" widget="monetary" options="{'currency_field': 'currency_id', 'field_digits': True}"/>
            </xpath>
            <xpath expr="//field[@name='code']" position="after">
                <field name="bom_tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                <field name="bom_season_ids" string="Seasonality ü•ï" groups="mrp_food.seasonality_manager" widget="many2many_tags" options="{'color_field': 'color'}"/>
                <field name="is_bom_seasonal" groups="base.group_no_one"/>
                <field name="are_bom_lines_seasonals" groups="base.group_no_one"/>
                <field name="bom_allergen_ids" widget="many2many_tags"/>
                <field name="bom_label_ids" widget="many2many_tags"/>
            </xpath>

            <!-- BoM Lines -->
            <xpath expr="//field[@name='bom_line_ids']/tree/field[@name='product_qty']" position="attributes">
                <attribute name="widget">numeric_step</attribute>
                <attribute name="options">{'step': 0.1, 'min': 0}</attribute>
            </xpath>
            <xpath expr="//field[@name='bom_line_ids']/tree/field[@name='product_uom_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='bom_line_ids']/tree/field[@name='product_qty']" position="after">
                <field name="label_ids" widget="many2many_tags"/>
                <field name="currency_id" invisible="1"/>
                <field name="standard_price_unit" widget="monetary" options="{'currency_field': 'currency_id', 'field_digits': True}"/>
                <field name="product_uom_id" string="UoM" readonly="1"/>
                <field name="allergen_ids" widget="many2many_tags"/>
                <field name="seasonality_ids" groups="mrp_food.seasonality_manager" widget="many2many_tags" options="{'color_field': 'color', 'no_quick_create': True}"/>
                <field name="is_seasonal" groups="base.group_no_one"/>
                <field name="standard_price_subtotal" readonly="1" sum="Total" widget="monetary" options="{'currency_field': 'currency_id', 'field_digits': True}" />
            </xpath>
        </field>
    </record>

    <!-- ************************************************************ -->
    <!-- MRP Bill of Materials - Tree -->
    <!-- ************************************************************ -->

    <record id="view_mrp_bom_tree" model="ir.ui.view">
        <field name="model">mrp.bom</field>
        <field name="inherit_id" ref="mrp.mrp_bom_tree_view" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="bom_tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                <field name="bom_season_ids" groups="mrp_food.seasonality_manager" widget="many2many_tags" options="{'color_field': 'color'}"/>
                <field name="bom_label_ids" widget="many2many_tags"/>
                <field name="bom_allergen_ids" widget="many2many_tags"/>
            </xpath>
            <xpath expr="//field[@name='product_uom_id']" position="after">
                <field name="active" widget="boolean_toggle"/>
            </xpath>
        </field>
    </record>

    <!-- ************************************************************ -->
    <!-- MRP Bill of Materials - Search -->
    <!-- ************************************************************ -->

    <record id="view_mrp_bom_search" model="ir.ui.view">
        <field name="model">mrp.bom</field>
        <field name="inherit_id" ref="mrp.view_mrp_bom_filter" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_tmpl_id']" position="after">
                <field name="bom_tag_ids"/>
                <field name="bom_season_ids" groups="mrp_food.seasonality_manager"/>
                <field name="bom_label_ids"/>
                <field name="bom_allergen_ids"/>
            </xpath>
        </field>
    </record>

</odoo>
