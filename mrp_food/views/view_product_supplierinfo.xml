<odoo>

    <!-- ************************************************************ -->
    <!-- 2 - Supplier info (Price Lists Tree View) -->
    <!-- ************************************************************ -->

    <record id="view_product_supplierinfo_mrp_tree" model="ir.ui.view">
        <field name="model">product.supplierinfo</field>
        <field name="arch" type="xml">
            <tree editable="bottom" create="false" decoration-info="diff_supplierinfo_product_standard_price != 0">
                <field name="sequence"/>
                <field name="is_main_seller" invisible="1"/>
                <field name="is_main_seller_icon" string=" " attrs="{'invisible': [('is_main_seller', '=', False)]}"/>
                <field name="product_tmpl_code" string="Code"/>
                <field name="product_tmpl_name" string="Product"/>
                <field name="display_name" string="Supplier" readonly="1"/>
                <field name="currency_id" invisible="1"/>
                  <field name="price" widget="monetary" options="{'display_currency': 'currency_id', 'field_digits': True}"/>
                <field name="product_uom" readonly="1" string="UoM"/>
                <field name="supplierinfo_standard_price_w_discount" string="New Price" widget="monetary" options="{'display_currency': 'currency_id'}"/>
                <field name="diff_supplierinfo_product_standard_price" string="Diff" groups="base.group_no_one"/>
                <button name="set_product_standard_price_from_supplierinfo" icon="fa-arrow-right" type="object" attrs="{'invisible': [('diff_supplierinfo_product_standard_price', '=', 0)]}" help="It will set product variant's standard price with this supplier info price"/>
                <field name="product_standard_price" string="Product price"/>
                <field name="product_name" string="Supplier product name"/>
                <field name="product_code" string="Supplier product code"/>
                <field name="min_qty" string="Min qty"/>
                <field name="company_id" groups="base.group_multi_company" readonly="1"/>
            </tree>
        </field>
    </record>

    <record id="action_product_supplierinfo_mrp_tree" model="ir.actions.act_window">
        <field name="name">Suppliers informations</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.supplierinfo</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_product_supplierinfo_mrp_tree"/>
    </record>

    <menuitem id="menu_product_supplierinfo_editable"
        name="Suppliers Informations"
        parent="menu_mrp_editable_views" sequence="2"
        action="action_product_supplierinfo_mrp_tree"/>


</odoo>
