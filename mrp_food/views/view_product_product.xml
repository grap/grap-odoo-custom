<odoo>

    <!-- ************************************************************ -->
    <!-- Product.product Product Food View -->
    <!-- ************************************************************ -->

    <record id="view_product_product_form" model="ir.ui.view">
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product_food.view_product_product_form" />
        <field name="arch" type="xml">

          <xpath expr="//group[@name='group_standard_price']" position="inside">
              <field name="date_last_statement_price"/>
          </xpath>

          <xpath expr="//field[@name='is_alimentary']" position="after">
              <field name="is_seasonal"/>
              <field name="allergen_ids" widget="many2many_tags"/>
              <field name="product_seasonality_ids" widget="many2many_tags" options="{'color_field': 'color', 'no_quick_create': True}"/>
          </xpath>

        </field>
    </record>

    <!-- ************************************************************ -->
    <!-- Product.product Search View -->
    <!-- ************************************************************ -->

    <record id="view_mrp_product_product_search" model="ir.ui.view">
        <field name="model">product.product</field>
        <field name="inherit_id" ref="mrp.mrp_product_product_search_view" />
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='consumable']" position="after">
                <separator/>
                <filter string="By Main Vendor" name="mrp_product_group_by_main_seller" context="{'group_by':'product_main_seller_partner_id'}"/>
                <filter string="By Category" name="mrp_product_group_by_category" context="{'group_by':'categ_id'}"/>
            </xpath>
        </field>
    </record>

    <!-- ************************************************************ -->
    <!-- 0 - new menu for Price Lists -->
    <!-- ************************************************************ -->

    <menuitem id="menu_mrp_editable_views"
        name="Price Lists - Inline editable"
        parent="mrp.menu_mrp_root" sequence="10"/>

    <!-- ************************************************************ -->
    <!-- 1 - Products (Price Lists Tree View) -->
    <!-- ************************************************************ -->

    <record id="view_product_product_mrp_tree" model="ir.ui.view">
        <field name="model">product.product</field>
        <field name="arch" type="xml">
            <tree editable="bottom" create="false">
                <field name="default_code" string="Def code" readonly="1"/>
                <field name="name" readonly="1"/>
                <field name="categ_id" readonly="1"/>
                <field name="currency_id" invisible="1"/>
                <field name="standard_price" widget="monetary" options="{'display_currency': 'currency_id', 'field_digits': True}"/>
                <field name="uom_id" string="UoM" readonly="1"/>
                <field name="seller_ids" widget="many2many_tags" readonly="1"/>
                <field name="date_last_statement_price"/>
                <field name="label_ids" widget="many2many_tags"/>
                <field name="allergen_ids" widget="many2many_tags"/>
                <field name="product_seasonality_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                <field name="is_seasonal"/>
                <field name="description"/>
                <field name="company_id" groups="base.group_multi_company" readonly="1"/>
            </tree>
        </field>
    </record>

    <record id="action_product_product_mrp_tree" model="ir.actions.act_window">
        <field name="name">Composants Products - Inline editable</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.product</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_product_product_mrp_tree"/>
        <field name="context">{"search_default_components":1}</field>
    </record>

    <menuitem id="menu_product_product_all"
        name="Composants Products"
        parent="menu_mrp_editable_views" sequence="1"
        action="action_product_product_mrp_tree"/>

    <!-- ************************************************************ -->
    <!-- 2 - Supplier info (Price Lists Tree View) -->
    <!-- ************************************************************ -->

    <record id="view_product_supplierinfo_mrp_tree" model="ir.ui.view">
        <field name="model">product.supplierinfo</field>
        <field name="arch" type="xml">
            <tree editable="bottom" create="false">
                <field name="product_tmpl_id" string="Product" readonly="1"/>
                <field name="display_name" string="Supplier" readonly="1"/>
                <field name="product_name"/>
                <field name="product_code"/>
                <!-- TODO : ajouter dans la vue Grap, dépend de purchase_package_qty-->
                <!-- <field name="package_qty"/> -->
                <field name="min_qty"/>
                <field name="currency_id" invisible="1"/>
                <field name="price" widget="monetary" options="{'display_currency': 'currency_id', 'field_digits': True}"/>
                <field name="product_uom" readonly="1"/>
                <!-- TODO : ajouter dans la vue Grap, dépend de purchase_discount-->
                <!-- <field name="discount"/>
                <field name="discount2"/> -->
                <field name="company_id" groups="base.group_multi_company" readonly="1"/>
            </tree>
        </field>
    </record>

    <record id="action_product_supplierinfo_mrp_tree" model="ir.actions.act_window">
        <field name="name">Suppliers informations - Inline editable</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.supplierinfo</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_product_supplierinfo_mrp_tree"/>
    </record>

    <menuitem id="menu_product_supplierinfo_editable"
        name="Suppliers Informations"
        parent="menu_mrp_editable_views" sequence="2"
        action="action_product_supplierinfo_mrp_tree"/>


</odoo>
