<odoo>

    <record id="view_product_main_seller" model="ir.ui.view">
        <field name="model">product.template</field>
        <field name="inherit_id" ref="purchase.view_product_supplier_inherit"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='vendors']" position="before">
              <group string="Main Vendor" name="main_vendor" attrs="{'invisible': [('product_variant_count','&gt;',1)]}">
                  <field name="main_seller_partner_id"/>
              </group>
            </xpath>
            <xpath expr="//group[@name='variant_vendors']" position="before">
              <group string="Main Variant Vendor" name="main_variant_vendor" attrs="{'invisible': [('product_variant_count','&lt;=',1)]}">
                  <field name="main_seller_variant_partner_id"/>
              </group>
            </xpath>
        </field>
    </record>

</odoo>
