<odoo>

    <record id="rule_bom_tag" model="ir.rule">
        <field name="name">Bill Of Material Tag Rule</field>
        <field name="model_id" ref="model_mrp_bom_tag" />
        <field name="global" eval="True" />
        <field name="domain_force">[
            '|',
            ('company_id', '=', user.company_id.id),
            ('company_id','=',False)
        ]</field>
    </record>

    <record id="rule_bom_season" model="ir.rule">
        <field name="name">Bill Of Material Season Rule</field>
        <field name="model_id" ref="model_mrp_bom_season" />
        <field name="global" eval="True" />
        <field name="domain_force">[
            '|',
            ('company_id', '=', user.company_id.id),
            ('company_id','=',False)
        ]</field>
    </record>

</odoo>
