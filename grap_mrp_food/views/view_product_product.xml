<odoo>

    <record id="view_product_product_form" model="ir.ui.view">
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view" />
        <field name="arch" type="xml">

            <xpath expr="//group[@name='group_standard_price']" position="inside">
                <field name="date_last_statement_price"/>
            </xpath>

            <xpath expr="//page[@name='alimentary_composition']" position="inside">
                <group string="Allergens Choice">
                    <field name="allergen_ids" nolabel="1" widget="many2many_tags"/>
                </group>
            </xpath>

        </field>
    </record>

    <!-- ************************************************************ -->
    <!-- 1 - Products (Price Lists Tree View) -->
    <!-- ************************************************************ -->

    <record id="view_product_product_mrp_tree" model="ir.ui.view">
        <field name="model">product.product</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="default_code" readonly="1"/>
                <field name="name" readonly="1"/>
                <field name="categ_id" readonly="1"/>
                <field name="currency_id" invisible="1"/>
                <field name="standard_price" widget="monetary" options="{'display_currency': 'currency_id', 'field_digits': True}"/>
                <field name="uom_id" string="UoM" readonly="1"/>
                <field name="seller_ids" widget="many2many_tags" readonly="1"/>
                <field name="date_last_statement_price"/>
                <field name="label_ids" widget="many2many_tags"/>
                <field name="allergen_ids" widget="many2many_tags"/>
                <field name="description"/>
                <field name="company_id" groups="base.group_multi_company" readonly="1"/>
            </tree>
        </field>
    </record>

    <record id="action_product_product_mrp_tree" model="ir.actions.act_window">
        <field name="name">Products - All</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.product</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_product_product_mrp_tree"/>
    </record>

    <menuitem id="menu_product_product"
        name="Products - All"
        parent="menu_mrp_pricelists" sequence="1"
        action="action_product_product_mrp_tree"/>


</odoo>
