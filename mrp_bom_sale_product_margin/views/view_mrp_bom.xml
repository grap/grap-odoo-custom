<odoo>

    <!-- ************************************************************ -->
    <!-- MRP Bill of Materials - Original View -->
    <!-- ************************************************************ -->

    <record id="view_mrp_bom_sale_product_margin_form" model="ir.ui.view">
        <field name="model">mrp.bom</field>
        <field name="inherit_id" ref="mrp.mrp_bom_form_view" />
        <field name="arch" type="xml">

            <xpath expr="//field[@name='routing_id']" position="before">
                <br/>
                <field name="currency_id" invisible="1"/>
                <!-- Standard price -->
                <field name="diff_product_bom_standard_price" groups="base.group_no_one"/>
                <field name="standard_price_total" class="oe_inline" widget="monetary"
                       options="{'currency_field': 'currency_id'}"
                       attrs="{'invisible': [('diff_product_bom_standard_price', '!=', 0)]}"/>
                <label for="standard_price_total"
                       attrs="{'invisible': [('diff_product_bom_standard_price', '=', 0)]}"/>
                <div attrs="{'invisible': [('diff_product_bom_standard_price', '=', 0)]}">
                    <field name="standard_price_total" class="oe_inline" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                    <button name="set_product_standard_price" string="⇒ Update Product variant cost"
                            type="object" class="oe_link"
                            help="It will set product variant's standard price with this price"/>
                </div>

                <!-- Theorical price -->
                <label for="bom_theoretical_price" attrs="{'invisible': [('bom_margin_state', '=', 'correct')]}"/>
                <div attrs="{'invisible': [('bom_margin_state', '=', 'correct')]}">
                    <field name="bom_theoretical_price" class="oe_inline" widget="monetary" options="{'currency_field': 'currency_id', 'field_digits': True}"/>
                    <button name="use_theoretical_price" string="⇒ Increase Price"
                            type="object" class="oe_link"
                            attrs="{'invisible': [('bom_margin_state', '!=', 'too_cheap')]}"
                            help="Increase the Sale Price up to Theoretical Price"/>
                    <button name="use_theoretical_price" string="⇒ Decrease Price"
                            type="object" class="oe_link"
                            attrs="{'invisible': [('bom_margin_state', '!=', 'too_expensive')]}"
                            help="Decrease the Sale Price down to Theoretical Price"/>
                </div>
                <field name="bom_margin_state" invisible="1"/>
                <!-- <field name="bom_lst_price" widget="monetary"/>
                <field name="bom_standard_margin_rate"/> -->
            </xpath>

            <!-- BoM Lines -->
            <xpath expr="//field[@name='bom_line_ids']/tree/field[@name='product_qty']" position="after">
                <field name="standard_price_unit" widget="monetary" options="{'currency_field': 'currency_id', 'field_digits': True}"/>
                <field name="standard_price_subtotal" readonly="1" sum="Total" widget="monetary" options="{'currency_field': 'currency_id', 'field_digits': True}" />
            </xpath>

        </field>
    </record>

</odoo>
