<odoo>


    <!-- ************************************************************ -->
    <!-- New view kanban for MRP -->
    <!-- ************************************************************ -->
    <record id="view_mrp_product_kanban" model="ir.ui.view">
        <field name="model">product.product</field>
        <field name="arch" type="xml">
            <kanban>
              <field name="id"/>
              <field name="image_small"/>
              <field name="lst_price"/>
              <field name="currency_id"/>
              <templates>
                  <t t-name="kanban-box">
                      <div class="oe_kanban_global_click">
                          <div class="o_kanban_image">
                              <img t-att-src="kanban_image('product.product', 'image_small', record.id.raw_value)" alt="Product"/>
                          </div>
                          <div class="oe_kanban_details">
                              <strong class="o_kanban_record_title">
                                  <field name="name"/>
                                  <small t-if="record.default_code.value">[<field name="default_code"/>]</small>
                              </strong>
                              <div name="tags"/>
                              <ul>
                                  <li>Cost: <field name="standard_price" widget="monetary" options="{'currency_field': 'currency_id', 'field_digits': True}"/></li>
                                  <li>Sale: <field name="lst_price" widget="monetary" options="{'currency_field': 'currency_id', 'field_digits': True}"/></li>
                              </ul>
                              <field name="allergen_ids" widget="many2many_tags"/>
                              <field name="product_seasonality_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                              <div name="tags"/>
                          </div>
                      </div>
                  </t>
              </templates>
            </kanban>
        </field>
    </record>


    <!-- ************************************************************ -->
    <!-- New menus for MRP -->
    <!-- ************************************************************ -->
    <record id="action_mrp_product_finished" model="ir.actions.act_window">
        <field name="name">Finished Products</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.product</field>
        <field name="view_type">form</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="view_id" ref="view_mrp_product_kanban"/>
        <field name="context">{"search_default_manufactured_products":1}</field>
    </record>

    <menuitem id="menu_product_finished"
        name="Finished Products"
        parent="grap_change_views_mrp.menu_mrp_bom_products" sequence="1"
        action="action_mrp_product_finished"/>

    <record id="action_mrp_product_composants" model="ir.actions.act_window">
        <field name="name">Composants Products</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.product</field>
        <field name="view_type">form</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="view_id" ref="view_mrp_product_kanban"/>
        <field name="context">{"search_default_components":1}</field>
    </record>

    <menuitem id="menu_product_composants"
        name="Composants Products"
        parent="grap_change_views_mrp.menu_mrp_bom_products" sequence="2"
        action="action_mrp_product_composants"/>

    <record id="action_mrp_product_all" model="ir.actions.act_window">
        <field name="name">All Products</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.product</field>
        <field name="view_type">form</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="view_id" ref="view_mrp_product_kanban"/>
    </record>

    <menuitem id="menu_product_all"
        name="All Products"
        parent="grap_change_views_mrp.menu_mrp_bom_products" sequence="3"
        action="action_mrp_product_all"/>

  </odoo>
